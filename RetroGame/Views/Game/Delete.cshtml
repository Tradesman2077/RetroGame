@model RetroGame.Models.Game



<form method="post" >
 
        <input asp-for="Id" hidden />
    

    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly"class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete game</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ReleaseYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ReleaseYear" disabled class="form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="InfoText"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="InfoText" class="form-control summernote"></textarea>


                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PlatformId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Platform.Name" disabled class="form-control" />
                        
                        
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeveloperId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Developer.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col p-1">

                                <button type="submit" class="btn btn-danger w-100" value="Edit">Delete</button>

                        </div>
                        <div class="col p-1">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 10)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb;" />
                }

            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />

    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable:true
            });
        });
        
    </script>
}