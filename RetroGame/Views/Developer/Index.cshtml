@model IEnumerable<Developer>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Developers</h2>
        </div>
        <div class="col-6 text-right" >
            <a asp-controller="Developer" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add a new developer
            </a>
            
        </div>
    </div>

    </br></br>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped " style="width:100%">
            <thead>
                <tr>
                    <th>
                        Developer Name
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
 
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Developer"asp-route-Id ="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2" >
                                   <i class="fas fa-edit"></i> 

                                </a>
                                <a asp-controller="Developer" asp-route-Id ="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i> 

                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Developer added</p>
    }
</div>