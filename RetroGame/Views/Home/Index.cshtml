@model RetroGame.Models.ViewModels.HomeVM
<div class="container">
    <div class="text-center">
        <button class="btn btn-danger filter-button " data-filter="all">All</button>

        @foreach (var obj in Model.Platforms)
        {
            <button class="btn btn-outline-secondary filter-button p-1" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </button>
        }

    </div>
    <br />
    <div class="text-center">
        <h4 style="padding:4px;">Recently Added</h4>
    </div>
    <div class="row">
        @foreach (var game in Model.Games)
        {
            //game.CompletePrice = GamePrice.GetHtmlAsyncPriceChart(game.Name, game.Platform.Name).Result;

            //display games
            <partial name="_IndividualGameCard" model="game" />
        }
    </div>
    
    <div class="container align-content-center p-4">
        <div class="row">
            <div class="col-3 d-flex justify-content-center shadow-sm p-1"><h5>Platforms</h5></div>
            <div class="col-3 d-flex justify-content-center shadow-sm p-1"><h5>Publishers</h5></div>
            <div class="col-3 d-flex justify-content-center shadow-sm p-1"><h5>Developers</h5></div>
            <div class="col-3 d-flex justify-content-center shadow-sm p-1"><h5>By Year</h5></div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".filter-button").click(function () {
                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');
                }
            });
        });

    </script>
}
