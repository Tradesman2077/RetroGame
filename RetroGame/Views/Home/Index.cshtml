@model RetroGame.Models.ViewModels.HomeVM
<div class="container">
   <div class ="text-center">
       <button class="btn btn-danger filter-button " data-filter="all">All</button>

           @foreach(var obj in Model.Platforms){
                <button class="btn btn-outline-secondary filter-button p-1" data-filter="@obj.Name.Replace(' ', '_')">
                    @obj.Name
                </button>
           }

   </div>
    <br />
    <div class="row">
        @foreach (var game in Model.Games)
        {
            //display games
            <partial name="_IndividualGameCard" model="game" />
        }
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".filter-button").click(function () {
                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');
                }
            });
        });

    </script>
}
