@model RetroGame.Models.Game


<div class="container backgroundWhite pt-4">
    <div class="card" style="border:1px solid #000000;">
        <div class="card-header bg-dark text-light ml-0 row container"style="border-radius:0px;">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.Name </h1>
                <h2 class="text-white">@Model.ReleaseYear</h2>
            </div>
            <div class="col-12 col-md-6 text-sm-right">
                <h1 class="text-warning"> @GamePrice.GetHtmlAsyncPriceChart(Model.Name, Model.Platform.Name).Result.Remove(23)</h1>
                <h2 class="text-warning"> @GamePrice.GetHtmlAsyncPriceChart(Model.Name, Model.Platform.Name).Result.Substring(23)</h2>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-4 p-1 text-center">
                        @if (Model.Image == null)
                        {
                            <img src="@WC.ImagePathNoImage"  style="width:100%;" class="rounded" />
                        }
                        else
                        {
                    <img src="@WC.ImagePath@Model.Image" style="width:100%;" class="rounded" />
                        }

                    </div>
                    <div class="col-12 col-lg-8">
                        <div class="row pl-3">
                            <div class="col-12">
                                <span class="badge p-3 border" style="background-color:lavenderblush">
                                    @Model.Platform.Name
                                </span>
                                <span class="badge p-3 border" style="background-color:azure">
                                    Publisher : @Model.Publisher.Name
                                </span>
                                <span class="badge p-3 border" style="background-color:floralwhite">
                                    Developer : @Model.Developer.Name
                                </span>
                                <h3 class="text-success"></h3>
                                @if (Model.InfoText != null)
                                {
                                    <div class="text-secondary">
                                        
                                            @Html.Raw(Model.InfoText)
                                </div>
                            }
                            else
                            {
                                <div class="text-secondary">No Info 
                                </div>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark">
            <div class="row">
                <div class="col-12 col-md pb-1">
                    <a asp-action="ListByRowDev" asp-route-id="@Model.DeveloperId" class="btn bg-warning btn-square btn-large">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

