@model List<Game>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-dark" style="font-family: 'Bebas Neue', cursive;">@Model.FirstOrDefault().Developer.Name</h2>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped " style="width:100%">

            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>
                        <td><a asp-action="DetailsAlt" asp-route-id="@obj.Id" class="text-dark">@obj.Name <i class="text-danger">@obj.Platform.Name</i><p>(@obj.ReleaseYear)</p></a></td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Games by this developer added</p>
    }
    <div class="row pt-4">
        <div class="col-6">
            <a asp-action="DevelopersList" class="btn btn-warning">Back</a>
        </div>
    </div>
</div>
